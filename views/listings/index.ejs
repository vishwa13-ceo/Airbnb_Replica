<% layout("layouts/boilerplate") %>
<body>
    <h3>All listings</h3>
    <!-- <form method="GET" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for(let listings of allListings){ %>
        <a href="listings/<%= listings._id  %>" class="listing-link">
        <div class="card col">
            <img src="<%= listings.image.url %>" class="card-img-top" alt="..." style="height:20rem">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listings.title %></b> <br>
                &#8377;<%= listings.price.toLocaleString("en-IN") %> /night <br>
              </p>
            </div>
          </div>
        </a>
          <% } %>
    </div>

</body>
